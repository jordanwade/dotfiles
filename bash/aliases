## ----- Code School ----- ##

alias rk_tasks="be rake -T | grep 'sample'"

// campus

alias campus_bcp='saturn -p -a campus --rake-all "campus:cache:bust course=all"'
alias campus_bcs='saturn -s -a campus --rake-all "campus:cache:bust course=all"'
alias campus_dtp='saturn --production --application campus --deploy'
alias campus_dts='saturn --staging --application campus --deploy'
alias campus_servers='saturn -a campus -p --wat'
alias cm_latest_courses='bundle exec rake campus:courses:install'
alias cm_update_courses='bundle exec rake campus:courses:update'

alias cm_check_courses='bundle exec rake campus:courses:cmd cmd="git status"'
alias cm_check_courses_b='bundle exec rake campus:courses:cmd cmd="git status" | grep "On branch"'

// .com

alias cs_dtp='saturn --production --application codeschool --deploy'
alias cs_dts='saturn --staging --application codeschool --deploy'

alias rkap='RAILS_ENV=development bundle exec rake assets:precompile'
alias rmpa='rm -rf public/assets'

