# ****************************************************
#
#   Config
#
# ****************************************************

# ----------------------------------------------------
#   Exports
# ----------------------------------------------------

export CLICOLOR=1
export SHELL='/bin/bash'

# ----------------------------------------------------
#   Autojump
# ----------------------------------------------------

[[ -s `brew --prefix`/etc/autojump.sh ]] && . `brew --prefix`/etc/autojump.sh

# ----------------------------------------------------
#   rbenv
# ----------------------------------------------------

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# ----------------------------------------------------
#   NVM
# ----------------------------------------------------

export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh

# ----------------------------------------------------
#   Gulp Autocomplete
# ----------------------------------------------------

eval "$(gulp --completion=bash)"
